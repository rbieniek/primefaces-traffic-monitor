    <version.org.apache.maven.plugins.maven_jar_plugin>2.4</version.org.apache.maven.plugins.maven_jar_plugin>
    <version.org.apache.maven.plugins.maven_rar_plugin>2.4</version.org.apache.maven.plugins.maven_rar_plugin>
    <version.org.apache.maven.plugins.maven_surefire_plugin>2.17</version.org.apache.maven.plugins.maven_surefire_plugin>

    <version.javax.jee>7.0</version.javax.jee>

    <version.commons.lang>3.3.2</version.commons.lang>

    <version.org.slf4j>1.7.7</version.org.slf4j>

